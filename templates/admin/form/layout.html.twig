{% extends "@UmbrellaAdmin/layout.html.twig" %}

{% set current_route = app.request.attributes.get('_route') %}

{% block content %}
    {{ nav_config('pills', {'active_strategy': 'current_route'}) }}
    {{ nav_start() }}
        {{ nav_item({'label' : 'Base', 'route': 'app_admin_form_base'}) }}
        {{ nav_item({'label' : 'Fichier', 'route': 'app_admin_form_file'}) }}
        {{ nav_item({'label' : 'Date', 'route': 'app_admin_form_date'}) }}
        {{ nav_item({'label' : 'Ckeditor', 'route': 'app_admin_form_ckeditor'}) }}
        {{ nav_item({'label' : 'Select2', 'route': 'app_admin_form_select2'}) }}
        {{ nav_item({'label' : 'Collection', 'route': 'app_admin_form_collection'}) }}
    {{ nav_end() }}

    <div class="tab-content">
        <div class="tab-pane active">
            {% block tab_content %}
                <form enctype="multipart/form-data" method="POST" data-mount="Form">

                    <div class="d-flex mb-3">
                        <span class="ml-auto"></span>
                        <button type="submit" class="btn btn-primary">
                            <i class="mdi mdi-check"></i> {{ 'action.save' | trans }}
                        </button>
                    </div>

                    {{ form_errors(form) }}

                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">{% block card_tile %}{% endblock %}</h4>
                            {{ form_rest(form) }}
                        </div>
                    </div>

                </form>
            {% endblock %}
        </div>
    </div>
{% endblock %}